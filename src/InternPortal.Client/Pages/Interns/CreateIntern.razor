@page "/"
@using InternPortal.Client.Models
@inject NavigationManager Navigation
@inject HttpClient Http


<MudPaper Class="pa-8 ma-4" Elevation="5">
    <MudGrid>
        <MudItem xs="12" class="d-flex align-center">
            <MudText Typo="Typo.h4" Class="mb-4">Добавление нового стажёра</MudText>
        </MudItem>

        <MudItem xs="12">
            <MudCard Class="pa-4">
                <MudCardContent>
                    <InternForm SubmitAction="HandleCreate" />
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudPaper>

@code{
    private async Task<HttpResponseMessage> HandleCreate(Intern newIntern)
    {
        var response = await Http.PostAsJsonAsync("api/Intern/Create", newIntern);
        return response;
    }
}